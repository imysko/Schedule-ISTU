<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="exam"
            type="com.example.schedule.entities.Exam" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_exam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="?attr/colorSecondaryContainer" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="8dp" >

                <TextView
                    android:id="@+id/exam_date"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="8dp"
                    android:background="@drawable/lesson_status_default"
                    style="@style/ClassicText.CascadiaMonoSemiBoldWhite"
                    app:bind_exam_date="@{exam.date}"
                    tools:text="дата" />

                <TextView
                    android:id="@+id/exam_time"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="12dp"
                    style="@style/ClassicText.CascadiaMonoRegular"
                    android:text="@{exam.time}"
                    tools:text="время" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/exam_divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                app:layout_constraintTop_toBottomOf="@id/exam_date"
                app:layout_constraintStart_toStartOf="parent"
                app:dividerColor="?attr/colorPrimary" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="12dp"
                android:layout_marginHorizontal="12dp" >

                <TextView
                    android:id="@+id/exam_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/ClassicText.CascadiaMonoSemiBold"
                    android:text="@{exam.name}"
                    tools:text="название" />

                <TextView
                    android:id="@+id/exam_teacher"
                    android:layout_marginTop="6dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/exam_name"
                    style="@style/ClassicText.CascadiaMonoItalic"
                    android:text="@{exam.teacher}"
                    app:visibility="@{exam.classroom.isEmpty() ? View.GONE : View.VISIBLE}"
                    tools:text="препод" />

                <TextView
                    android:id="@+id/exam_classroom"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@id/exam_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/ClassicText.CascadiaMonoRegular"
                    android:text="@{exam.classroom}"
                    app:visibility="@{exam.classroom.isEmpty() ? View.GONE : View.VISIBLE}"
                    tools:text="кабинет" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>