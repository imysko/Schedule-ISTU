<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <data>
        <import type="android.view.View" />
        <variable
            name="lesson"
            type="com.example.timetable.entities.Lesson" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/light_blue" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="12dp" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/class_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/class_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="0dp"
                    android:paddingEnd="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:text="@{lesson.number}"
                    tools:text="№" />

                <TextView
                    android:id="@+id/class_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/class_number"
                    app:layout_constraintTop_toTopOf="parent"
                    app:text="@{lesson.time}"
                    tools:text="время" />

                <TextView
                    android:id="@+id/class_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/class_icon"
                    app:text="@{lesson.type}"
                    tools:text="тип" />

                <ImageView
                    android:id="@+id/class_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    android:paddingEnd="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:contentDescription="@string/todo" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="6dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/class_body"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="8dp"
                android:paddingBottom="12dp" >

                <TextView
                    android:id="@+id/class_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:paddingBottom="4dp"
                    app:text="@{lesson.name}"
                    tools:text="название"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/class_teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/class_name"
                    app:text="@{lesson.teacher}"
                    tools:text="препод" />
                <TextView
                    android:id="@+id/class_classroom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/class_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:text="@{lesson.classroom}"
                    tools:text="кабинет" />

                <TextView
                    android:id="@+id/class_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/class_teacher"
                    android:autoSizeTextType="uniform"
                    app:text="@{lesson.group}"
                    tools:text="группа" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>